	<content><![CDATA[
/*	TC - O(log n)
	SC - O(1)
*/
int fast_modulo_exponentiation(int x , int n , int m)
{
	int ans = 1;
	while(n)
	{
		if(n & 1 == 1)
			ans = (ans * x) % m;
		x = (x * x) % m;
		n = n >> 1;
	}
	return ans;
}
]]></content>
